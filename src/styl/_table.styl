    justify-content: space-between
    align-content: space-between

    +respond-to($small)
      max-height: 6050px

    +respond-to($xsmall)
      max-height: none
      flex-wrap: no-wrap
      align-items: center

  tbody.ranking-table__tbody--pacific
    display: flex
    flex-direction: column
    flex-wrap: wrap
    max-height: 2920px
    justify-content: space-between
    align-content: space-between

    +respond-to($small)
